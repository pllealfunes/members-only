extends layout

block content
  h1= title
  if user
    a(href='/') Home
    a(href='/upgradeMember') Upgrade Member Status
    br
    br
    if (errors)
        each error, index in errors
            p=error.msg
    form(class="msgForm" method='POST' action="/newMessage")
                div.form-group
                input(type='hidden', value=user.username name='username')
                div.form-group
                label(for='title')
                input(type='text', placeholder='Topic' name='title')
                div.form-group
                label(for='message')
                textarea(placeholder='New Message' name='message')
                button(type='submit') Submit
  else
    a(href='/') Home
    a(href='/upgradeMember') Upgrade Member Status